<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.training.android.undivided.GroupSender.Module.Message_Detail.MessageDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sms_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_normal_view"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="Today will be a nice day!"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="70dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#11CD6E"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/phone_number_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:listitem="@layout/item_phone_number"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
